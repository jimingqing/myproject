@charset "utf-8";
body { background: url(../images/bg01.gif) repeat-x top; font-family: "Microsoft YaHei","微软雅黑",Helvetica,"黑体",Arial,Tahoma; }
.clear { clear: both; }
.content .login { height: 536px; width: 275px; position: absolute; z-index: 9; top: 150px; right:10%; background-image: url(../images/loginbg.png); background-repeat: no-repeat; }
.content .login .loginp { height:26px; border:1px solid #c3c3c3; font-size:14px; padding: 2px 5px; line-height: 24px; }
.content .main { height: auto; width: 1000px; position: relative; z-index: 3; overflow: hidden; margin: 0 auto; }
.content { position: relative; z-index: 3; }
.logintop { font-size: 16px; font-weight: bold; color: #5a5a5a; height: 35px; width: 245; line-height: 35px; border-bottom-width: 1px; border-bottom-style: solid; border-bottom-color: #CCC; padding-left: 20px; }
.bianhao { font-size: 14px; font-weight: bold; color: #333; width: 275px; height: 30px; line-height: 30px; }
/*#bianhao { height: 24px; width: 148px; padding-left: 8px; margin-bottom: 6px; padding-right: 15px; line-height:18px; font-size:14px; font-weight:bold; color:#999;}
*/
.sign { padding-left: 20px; padding-top: 15px; }
.sign .errMsg { height:20px; margin-left: 10px; padding-bottom: 5px;color: red; float: left; line-height: 20px; font-size: 14px; padding-left:20px; background-image: url(../images/loginerror.png); background-repeat: no-repeat; background-position: 0 3px; }
.test { height: 30px; width: 315px; float: left; }
.bot { height: 32px; width: 234px; margin-right: auto; margin-left: auto; font-size: 16px; font-weight:bold; color: #FFF; margin-top: 5px; border:0; background-image: url(../images/loginon.gif); background-repeat: no-repeat; border-top-style: none; border-right-style: none; border-bottom-style: none; border-left-style: none; }
.bot:hover { background-image: url(../images/loginon1.gif); background-repeat: no-repeat; border:0; }
.box { height: 42px; width: 275px; padding:0; margin:0; }
.sign p { font-size: 12px; color: #888888; margin-top: 12px; }
.sign p:hover { color: #666; }
.clear { clear: both;}
