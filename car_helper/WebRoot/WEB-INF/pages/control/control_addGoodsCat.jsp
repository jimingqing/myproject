<script type="text/javascript">

	function actSubmit(){
		var catName = $("#catName").val();
		var catDesc = $("#catDesc").val();
		var state = $("#state").val();
		var porder = $("#porder").val();
		
		if(isEmpty(catName)){
			showErrMsg($("#catName"), "请填写分类名称");
			$("#catName").focus();
			return;
		}
		if(!isNumber(porder)){
			showErrMsg($("#porder"), "请填写顺序编号");
			$("#porder").focus();
			return;
		}
		
		if(confirm("确认添加商品分类信息！")){
			showErrMsg();
			var param = {};
			param.catName = catName;
			param.catDesc = catDesc;
			param.state = state;
			param.porder = porder;
			
			var succCallBack=function(data){
				if(data.retCode == "0000"){
					alert(data.retMsg);
				}else{
					alert(data.retMsg);
				}
			};
			
			var errCallBack = function(){
				alert("新增商品分类信息失败");
			};
			
			doAjaxRequest("${ctx}/console/gd_addGoodsCat.action", param, succCallBack, errCallBack);
		}
	}
</script>
